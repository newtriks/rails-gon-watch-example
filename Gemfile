source 'https://rubygems.org'

gem 'rails', '3.2.13'
gem 'sqlite3'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
  gem 'zurb-foundation'
end

group :development do
  gem 'thin'
  gem 'dotenv-rails'
end

gem 'jquery-rails'

# Example project specific gems
gem 'zencoder' # https://github.com/zencoder/zencoder-rb
gem 'gon', '~> 4.1.1' # https://github.com/gazay/gon
gem 'lodash-rails' # https://github.com/rh/lodash-rails